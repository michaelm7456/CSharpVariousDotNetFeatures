@inherits LayoutComponentBase
@inject NavigationManager _navigationManager

<div class="page @ThemeSetting.Theme">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">

            <b>Current Theme:</b> &nbsp;
            @ThemeSetting.Theme &nbsp;

            <button class="btn btn-primary" @onclick="ChangeTheme">Change Theme</button>

            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private void ChangeTheme()
    {
        if (ThemeSetting.Theme == "light-mode")
        {
            ThemeSetting.Theme = "dark-mode";
        }
        else
        {
            ThemeSetting.Theme = "light-mode";
        }

        _navigationManager.Refresh();
    }
}